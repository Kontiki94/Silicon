@model ShowcaseViewModel

<section id="@Model.Id" class="showcase">
    <div class="container">
        <div class="content">
            <p class="d4">@Model.Title</p>
            <p>@Model.Text</p>
            <a class="btn-theme-s" asp-controller="@Model.Link.ControllerName" asp-action="@Model.Link.ActionName">@Model.Link.Text</a>
            <h6>@Model.BrandsText</h6>
            <div class="brands">
                @if(Model.Brands is not null)
                {
                    foreach(var brand in Model.Brands)
                    {
                        <img src="@brand.ImageUrl" alt="@brand.AltText" />
                    }
                }
            </div>
        </div>
    </div>
    <img class="background-image" src="@Model.ShowcaseImage.ImageUrl" alt="@Model.ShowcaseImage.AltText"/>
</section>
