@model AccountViewModel


<section id="saved-courses">
    <div class="container">
        <div class="menu-bar">
            @await Html.PartialAsync("~/Views/Shared/Component/_AccountNavbarPartial.cshtml")           
        </div>
        <div class="content">
            <h2>@Model.SavedCourses.Title</h2>
            <div class="saved-items">

                

                <div class="course-card" @* onclick="location.href='@Url.Action("CourseDetails", "Courses", new{id = Model.SavedCourses.Course.Id})'" *@>
                    <div class="image">
                        <img src="~/images/video-game-design.svg" />
                    </div>                    
                    <a class="bookmark" asp-controller="Courses" asp-action="JoinCourse"><i class="fa-solid fa-bookmark"></i></a>  //asp-action remove?
                    <div class="hide"><p>Remove</p></div>
                    <div class="course-info">
                        <h5 class="title">@Model.SavedCourses.Course.Title</h5>
                        <p class="author">By @Model.SavedCourses.Course.AuthorName</p>
                        <p class="price">$@Model.SavedCourses.Course.Price</p>
                        <div class="divider"></div>                        
                    </div>
                    <div class="bottom">
                        <div>
                            <i class="fa-sharp fa-solid fa-clock"></i>
                            <p>@Model.SavedCourses.Course.ViewHours hours</p>
                        </div>
                        <div>
                            <i class="fa-sharp fa-light fa-thumbs-up"></i>
                            <p>@Model.SavedCourses.Course.LikesInPercent</p>
                            <p>@Model.SavedCourses.Course.LikesInNumbers</p>
                        </div>
                    </div>
                    
                </div>
